{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "server/server.js"
        },
        {
            "src": "/(.*))",
            "dest": "server/server.js"
        },
        {
            "src": "/public/(.*)",
            "dest": "public/$1"
        }
    ],
    "public": true,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/public/index.html"
        }
    ],
    "headers": [
        {
            "source": "/public/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
